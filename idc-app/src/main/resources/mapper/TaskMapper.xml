<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iwellmass.idc.app.mapper.TaskMapper">

	<!-- 批量查询 Task 信息-->
	<select id="selectBatch" resultType="com.iwellmass.idc.model.Task">
		SELECT
			*
		FROM
			t_idc_task
		WHERE
			(task_id, task_group) in
			<foreach collection="taskKeys" open="(" close=")" separator="," item="taskKey">
				( #{taskKey.taskId}, #{taskKey.taskGroup} )
			</foreach>
	</select>
</mapper>